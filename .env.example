# ============================================
# Azmyra - Environment Configuration
# ============================================
# Copy this file to .env.local and fill in your values

# ---------- NextAuth.js ----------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# ---------- Database ----------
# PostgreSQL (production / Cloud SQL):
# DATABASE_URL="postgresql://user:pass@/dbname?host=/cloudsql/PROJECT:REGION:INSTANCE"
# PostgreSQL (local):
# DATABASE_URL="postgresql://postgres:password@localhost:5432/azmyra"
# SQLite (local dev fallback — requires changing prisma/schema.prisma provider to sqlite):
# DATABASE_URL="file:./dev.db"
DATABASE_URL="postgresql://postgres:password@localhost:5432/azmyra"

# ---------- Python Agent Service ----------
AGENT_SERVICE_URL=http://localhost:8100

# ---------- LLM Providers ----------
# Configured per-user in the Settings UI (stored encrypted in DB)
# No global LLM env vars needed

# ---------- Jira Integration ----------
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=
JIRA_PROJECT_KEY=

# ---------- Slack Integration ----------
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=
SLACK_CHANNEL_ID=

# ---------- Confluence Integration ----------
CONFLUENCE_BASE_URL=https://your-domain.atlassian.net/wiki
CONFLUENCE_EMAIL=your-email@company.com
CONFLUENCE_API_TOKEN=
CONFLUENCE_SPACE_KEY=

# ---------- Email (SMTP) ----------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# ---------- OAuth Providers ----------
# Google (create at https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Microsoft Azure AD (create at https://portal.azure.com → App registrations)
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_TENANT_ID=common

# ---------- CAPTCHA (Cloudflare Turnstile) ----------
# Create at https://dash.cloudflare.com → Turnstile
NEXT_PUBLIC_TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=

# ---------- Encryption ----------
CREDENTIALS_ENCRYPTION_KEY=your-32-byte-encryption-key-here
